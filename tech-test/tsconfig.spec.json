{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@services/*": [
        "src/app/services/*"
      ],
      "@schemas/*": [
        "src/app/modules/core/schemas/*"
      ],
      "@shared/*": [
        "src/app/modules/shared/*"
      ],
      "@environments/*": [
        "src/environments/*"
      ]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
